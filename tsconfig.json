{
  "compilerOptions": {
    "target": "ES2024",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      "*": ["node_modules/*"],
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@main/*": ["src/main/*"],
      "@app-types/*": ["src/types/*"],
      "@app-types": ["src/types/index.ts"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*"]
}
